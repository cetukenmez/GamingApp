@model IEnumerable<GamingApp.Entity.Logs>
@{
    ViewData["Title"] = "Loglar";
    Layout = "_Layout";
}

<h1>Loglar</h1>


<div id="" class="">
    <table class="table table-striped table-bordered"  style="font-size: 12px;">
        <thead>
            <tr>
                <th>İşlem Tarihi</th>
                <th>İşlemi Yapan</th>
                <th>IP Adresi</th>
                <th>Oyun Adı</th>
                <th>İşlem Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @{foreach (var item in Model)
                {
                        <tr>
                            <td>@item.LogDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@item.UserName</td>
                            <td>@item.IpAddress</td>
                            <td>@item.Game.GameName</td>
                            <td>@item.LogDesc</td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>